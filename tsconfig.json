{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "rootDir": "./src",
    "lib": [
      "es2017"
    ],
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "stories",
    "dist"
  ]
}