{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es6"
    ],
    "sourceRoot": "src",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "stories"
  ]
}