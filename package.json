{
  "name": "react-boxl",
  "version": "0.1.0",
  "description": "A thing",
  "author": "Crema",
  "license": "ISC",
  "types": "dist/types/Box.d.ts",
  "main": "dist/web.js",
  "files": [
    "dist"
  ],
  "watch": {
    "loki": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx"
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "start": "npm run storybook",
    "build": "npm run clean && rollup -c rollup.config.js",
    "build:watch": "npm run build -- -w",
    "test": "node_modules/.bin/jest",
    "test:watch": "npm run test -- --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "loki": "loki test",
    "loki:watch": "run-p storybook watch:loki",
    "loki:update": "loki update",
    "loki:approve": "loki approve",
    "watch": "npm-watch",
    "watch:loki": "npm-watch loki"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.4.2",
    "styled-components": ">= 3.0.0 < 5.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.10",
    "@storybook/addon-links": "^3.4.10",
    "@storybook/addons": "^3.4.10",
    "@storybook/react": "^3.4.10",
    "@types/jest": "^23.3.3",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "@types/storybook__react": "^3.0.9",
    "@types/styled-components": "^3.0.0",
    "babel-core": "^6.26.3",
    "jest": "^23.5.0",
    "loki": "^0.13.0",
    "npm-run-all": "^4.1.3",
    "npm-watch": "^0.4.0",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "rollup": "^0.65.0",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-typescript2": "^0.17.0",
    "styled-components": "^4.0.2",
    "ts-jest": "^23.10.3",
    "ts-loader": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3"
  },
  "loki": {
    "configurations": {
      "box": {
        "target": "chrome.docker",
        "width": 500,
        "height": 500,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      }
    }
  }
}
